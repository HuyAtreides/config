[
  {
    "key": "ctrl+n",
    "command": "explorer.newFile"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder"
  },
  {
    "key": "alt+i",
    "command": "editor.action.sourceAction"
  },
  {
    "key": "ctrl+shift+j",
    "command": "-rust-analyzer.joinLines",
    "when": "editorTextFocus && editorLangId == 'rust'"
  },
  {
    "key": "ctrl+shift+j",
    "command": "-workbench.action.search.toggleQueryDetails",
    "when": "inSearchEditor || searchViewletFocus"
  },
  {
    "key": "space",
    "command": "vscode-neovim.send",
    "args": "<space>",
    "when": "editorTextFocus && neovim.mode != insert"
  },

  // Window navigation: Ctrl+J/K pass to Neovim
  {
    "key": "ctrl+j",
    "command": "vscode-neovim.send",
    "args": "<C-j>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "ctrl+k",
    "command": "vscode-neovim.send",
    "args": "<C-k>",
    "when": "editorTextFocus && neovim.mode != insert"
  },

  // Ctrl+H/L: pass to Neovim (Neovim handles via VSCodeNotify)
  {
    "key": "ctrl+h",
    "command": "vscode-neovim.send",
    "args": "<C-h>",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "ctrl+l",
    "command": "vscode-neovim.send",
    "args": "<C-l>",
    "when": "editorTextFocus && neovim.mode != insert"
  },

  // Ctrl+L: from sidebar/explorer -> focus back to editor
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus"
  },

  // Terminal toggle: Ctrl+/ pass to Neovim
  {
    "key": "ctrl+/",
    "command": "vscode-neovim.send",
    "args": "<C-/>",
    "when": "editorTextFocus && neovim.mode != insert"
  }
]
