" =============================================================================
" LazyVim-style IdeaVim config
" Symlink: ln -s ~/config/ideavim/.ideavimrc ~/.ideavimrc
" =============================================================================

" -----------------------------------------------------------------------------
" Options
" -----------------------------------------------------------------------------
let mapleader = " "

set number
set relativenumber
set ignorecase
set smartcase
set clipboard=unnamedplus
set timeoutlen=300
set scrolloff=8
set incsearch
set hlsearch
set showmode

" IdeaVim built-in plugin emulations (these are free â€” part of IdeaVim itself)
set surround
set commentary
set highlightedyank
set ideajoin
set argtextobj
set nerdtree
set which-key

" Which-key timeout
let g:WhichKey_DefaultDelay = 300

" NERDTree settings (controls Project view with vim-like navigation)
let g:NERDTreeMapActivateNode = "l"
let g:NERDTreeMapCloseDir = "h"

" -----------------------------------------------------------------------------
" File / Find
" -----------------------------------------------------------------------------
nmap <leader>ff <Action>(GotoFile)
nmap <leader><space> <Action>(GotoFile)
nmap <leader>fr <Action>(RecentFiles)
nmap <leader>fn <Action>(NewFile)
nmap <leader>, <Action>(Switcher)
nmap <leader>: <Action>(GotoAction)

" -----------------------------------------------------------------------------
" Search / Grep
" -----------------------------------------------------------------------------
nmap <leader>/ <Action>(FindInPath)
nmap <leader>sg <Action>(FindInPath)
nmap <leader>sr <Action>(ReplaceInPath)
nmap <leader>sb <Action>(Find)
nmap <leader>ss <Action>(FileStructurePopup)
nmap <leader>sS <Action>(GotoSymbol)
nmap <leader>sC <Action>(GotoAction)
nmap <leader>sd <Action>(ActivateProblemsViewToolWindow)
nmap <leader>sw <Action>(FindWordAtCaret)

" -----------------------------------------------------------------------------
" Buffer
" -----------------------------------------------------------------------------
nmap <leader>bd <Action>(CloseContent)
nmap <leader>bo <Action>(CloseAllEditorsButActive)
nmap <leader>bl <Action>(CloseAllToTheLeft)
nmap <leader>br <Action>(CloseAllToTheRight)
nmap <leader>bb <Action>(Switcher)
nmap <leader>bp <Action>(PinActiveEditorTab)
nmap <S-h> <Action>(PreviousTab)
nmap <S-l> <Action>(NextTab)
nmap [b <Action>(PreviousTab)
nmap ]b <Action>(NextTab)

" -----------------------------------------------------------------------------
" Window
" -----------------------------------------------------------------------------
nmap <C-j> <Action>(NextSplitter)
nmap <C-k> <Action>(PrevSplitter)
nmap <leader>w- <Action>(SplitHorizontally)
nmap <leader>- <Action>(SplitHorizontally)
nmap <leader>w\| <Action>(SplitVertically)
nmap <leader>\| <Action>(SplitVertically)
nmap <leader>wd <Action>(Unsplit)
nmap <leader>ww <Action>(NextSplitter)
nmap <leader>wm <Action>(MaximizeEditorInSplit)

" Explorer <-> Editor navigation (like Snacks explorer in LazyVim)
" Ctrl+H: from editor -> focus project tool window (like moving left to explorer)
nmap <C-h> <Action>(ActivateProjectToolWindow)
" Ctrl+L: from anywhere -> focus editor (like moving right from explorer)
nmap <C-l> <Action>(FocusEditor)

" -----------------------------------------------------------------------------
" Code / LSP
" -----------------------------------------------------------------------------
nmap gd <Action>(GotoDeclaration)
nmap gD <Action>(GotoDeclaration)
nmap gr <Action>(ShowUsages)
nmap gI <Action>(GotoImplementation)
nmap gy <Action>(GotoTypeDeclaration)
nmap K <Action>(ShowHoverInfo)
nmap gK <Action>(ParameterInfo)
nmap <leader>ca <Action>(ShowIntentionActions)
vmap <leader>ca <Action>(ShowIntentionActions)
nmap <leader>cA <Action>(ShowIntentionActions)
nmap <leader>cr <Action>(RenameElement)
nmap <leader>cf <Action>(ReformatCode)
vmap <leader>cf <Action>(ReformatCode)
nmap <leader>cd <Action>(ShowErrorDescription)
nmap ]d <Action>(GotoNextError)
nmap [d <Action>(GotoPreviousError)
nmap ]e <Action>(GotoNextError)
nmap [e <Action>(GotoPreviousError)

" -----------------------------------------------------------------------------
" Git
" -----------------------------------------------------------------------------
nmap <leader>gg <Action>(ActivateVersionControlToolWindow)
nmap <leader>gb <Action>(Annotate)
nmap ]h <Action>(VcsShowNextChangeMarker)
nmap [h <Action>(VcsShowPrevChangeMarker)
nmap <leader>ghr <Action>(Vcs.RollbackChangedLines)

" -----------------------------------------------------------------------------
" Explorer / Sidebar
" -----------------------------------------------------------------------------
nmap <leader>e :NERDTreeToggle<CR>
nmap <leader>E <Action>(SelectInProjectView)

" -----------------------------------------------------------------------------
" Diagnostics / Problems
" -----------------------------------------------------------------------------
nmap <leader>xx <Action>(ActivateProblemsViewToolWindow)

" -----------------------------------------------------------------------------
" UI Toggles
" -----------------------------------------------------------------------------
nmap <leader>uz <Action>(ToggleZenMode)
nmap <leader>uZ <Action>(ToggleDistractionFreeMode)
nmap <leader>uw <Action>(EditorToggleUseSoftWraps)
nmap <leader>ul <Action>(EditorToggleShowLineNumbers)

" -----------------------------------------------------------------------------
" Terminal
" -----------------------------------------------------------------------------
nmap <C-/> <Action>(ActivateTerminalToolWindow)
nmap <leader>ft <Action>(ActivateTerminalToolWindow)
nmap <leader>fT <Action>(Terminal.OpenInTerminal)

" -----------------------------------------------------------------------------
" Quit
" -----------------------------------------------------------------------------
nmap <leader>qq <Action>(Exit)

" -----------------------------------------------------------------------------
" General
" -----------------------------------------------------------------------------
" Move lines
nmap <A-j> <Action>(MoveLineDown)
nmap <A-k> <Action>(MoveLineUp)
vmap <A-j> <Action>(MoveLineDown)
vmap <A-k> <Action>(MoveLineUp)

" Save
nmap <C-s> <Action>(SaveAll)
imap <C-s> <Esc><Action>(SaveAll)
vmap <C-s> <Esc><Action>(SaveAll)

" Clear search highlight
nmap <Esc> :noh<CR><Esc>

" Indenting (stay in visual)
vmap < <gv
vmap > >gv

" Center after jumps
nmap n nzzzv
nmap N Nzzzv
nmap <C-d> <C-d>zz
nmap <C-u> <C-u>zz
